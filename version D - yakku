package versionD;

public class CharArray {
	private char myCharArray[];

	public CharArray(char[] myCharArray) {
		this.myCharArray = myCharArray;
	}
	
	public void swapFirstAndLast() {
		char first = myCharArray[0];
		char last = myCharArray[myCharArray.length - 1];
		
		myCharArray[0] = last;
		myCharArray[myCharArray.length - 1] = first;
	}
	
	public void DisplayArray() {
		for(int i = 0; i < myCharArray.length; i++) {
			System.out.print(myCharArray[i] + " ");
		}
	}
	
	void displayString() {
		System.out.println(String.valueOf(myCharArray));
	}
}
